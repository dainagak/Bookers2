<div class='container px-5 px-sm-0'>
<%= render 'books/error', book: @book %>
  <div class='row'>
      <%= render 'books/list', user: @user, book: @book %>

    <div class='col-md-8 offset-md-1'>
      <table class='table table-hover table-inverse'>
        <h2>Books</h2>
        <thead>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
          <th colspan="3"></th>
        </thead>
        <tbody>
          <% @books.each do |book| %>
            <tr>
              <td>
                <%= link_to user_path(book.user) do %>
                  <%= attachment_image_tag @user, :profile_image, :fill, 40, 40, fallback: "no_image.jpg", size: "45x45" %>
                <% end %>
              </td>
              <td>
              <td><%= link_to book.title, book_path(book.id) %></td>
              <td><%= book.body %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>