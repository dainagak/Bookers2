<div class='col-md-3'>
  <table class='table'>
    <h2>User info</h2>
      <thead>
        <tr>
        <%= attachment_image_tag user, :profile_image, :fill, 65, 65, fallback: "no_image.jpg", size: "65x65" %>
      </tr>
      </thead>

      <tbody>
        <tr>
          <th>Name</th>
          <th><%= user.name %></th>
        </tr>
        <tr>
          <th>Introduction</th>
          <th><%= user.introduction %></th>
        </tr>
        <tr>
          <th colspan="2">
          <%= link_to edit_user_path(@user), class:"btn btn-outline-secondary btn-block fas fa-user-cog" do %>
          <% end %>
          </th>
        </tr>
      </tbody>
  </table>

  <h2>New book</h2>
    <%= form_with model: book, local:true do |f| %>
      <h4>Title</h4>
        <%= f.text_field :title %>
      <h4>Opinion</h4>
        <%= f.text_area :body %>
        <%= f.submit 'Create Book', class:"btn btn-success" %>
    <% end %>

</div>